@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model WebBanSachDemo.Data.Loai

@{
    ViewData["Title"] = "ThemDanhMuc";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Thêm Danh Mục</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="ThemDanhMuc" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TenLoai" class="control-label"></label>
                <input asp-for="TenLoai" class="form-control" />
                <span asp-validation-for="TenLoai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenLoaiAlias" class="control-label"></label>
                <input asp-for="TenLoaiAlias" class="form-control" />
                <span asp-validation-for="TenLoaiAlias" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MoTa" class="control-label"></label>
                <input asp-for="MoTa" class="form-control" />
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>
            @* <div class="form-group">
                <label asp-for="Hinh" class="control-label"></label>
                <input asp-for="Hinh" class="form-control" />
                <span asp-validation-for="Hinh" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <label for="HinhFiles" class="control-label">Hình</label>
                <input type="file" name="HinhFiles" id="HinhFiles" class="form-control" multiple onchange="previewImages();" />
                <div id="imagePreviewContainer" class="mt-2"></div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Thêm loại</button>
            </div>
        </form>
    </div>
</div>

