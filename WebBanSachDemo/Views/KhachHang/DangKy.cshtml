@model WebBanSachDemo.ViewModels.RegisterVM
@{
    ViewData["Title"] = "Đăng Ký";
}
<div style="margin-top:20px"></div>
<div class="container-fluid py-5 mt-5">
            <div class="container py-5">
                <div class="row g-4 mb-5">
            <div class="col-lg-8 col-xl-6" style="margin-top:50px">
                        <h1>Phần bên phải</h1>
                    </div>
                    <div class="col-lg-4 col-xl-6 justify-content-center align-items-center" >
                        <form asp-action="DangKy" style="margin-top:50px; margin-bottom:50px;border:solid 1px gray;padding:50px 0px;border-radius:20px">
                            <div class="row">
                            <h1 class="mb-4" style="text-align:center">Đăng Ký</h1>
                            </div>
                            <div class="row justify-content-center">
                                <div class="col-md-12 col-lg-6">
                                    <div class="form-item ">
                                        <label asp-for="@Model.MaKh" class="form-lable my-3"></label><sup>*</sup>
                                        <input asp-for="@Model.MaKh" class="form-control" />
                                        <span asp-validation-for="@Model.MaKh" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row justify-content-center">
                                <div class="col-md-12 col-lg-6">
                                    <div class="form-item ">
                                        <label asp-for="@Model.MatKhau" class="form-lable my-3"></label><sup>*</sup>
                                        <input asp-for="@Model.MatKhau" class="form-control" />
                                        <span asp-validation-for="@Model.MatKhau" class="text-danger"></span>
                                    </div>
                                    </div>
                             </div>
                            <div class="row justify-content-center">
                                <div class="col-md-12 col-lg-6">
                                    <div class="form-item ">
                                        <label asp-for="@Model.HoTen" class="form-lable my-3"></label><sup>*</sup>
                                        <input asp-for="@Model.HoTen" class="form-control" />
                                        <span asp-validation-for="@Model.HoTen" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row justify-content-center">
                        <div class="col-md-12 col-lg-6 form-check" style="align-items: center; display: flex;">
                                   @*  <div class="form-check my-3"> *@
                                        <input asp-for="@Model.GioiTinh" class="form-check-input" style="margin:0px 3px" />
                                        <label asp-for="@Model.GioiTinh" class="form-lable my-3">Nam?</label>
                                @*     </div> *@
                                </div>
                            </div>
                            <div class="row justify-content-center">
                                <div class="col-md-12 col-lg-6">
                                    <div class="form-item ">
                                        <label asp-for="@Model.NgaySinh" class="form-lable my-3"></label>
                                        <input asp-for="@Model.NgaySinh" class="form-control" />
                                    </div>
                                </div>
                            </div>
                    <div class="row justify-content-center">
                        <div class="col-md-12 col-lg-6">
                            <div class="form-item ">
                                <label asp-for="@Model.DiaChi" class="form-lable my-3"></label><sup>*</sup>
                                <input asp-for="@Model.DiaChi" class="form-control" />
                                <span asp-validation-for="@Model.DiaChi" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-md-12 col-lg-6">
                            <div class="form-item ">
                                <label asp-for="@Model.DienThoai" class="form-lable my-3"></label><sup>*</sup>
                                <input asp-for="@Model.DienThoai" class="form-control" />
                                <span asp-validation-for="@Model.DienThoai" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-md-12 col-lg-6">
                            <div class="form-item ">
                                <label asp-for="@Model.Email" class="form-lable my-3"></label><sup>*</sup>
                                <input asp-for="@Model.Email" class="form-control" />
                                <span asp-validation-for="@Model.Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <button class="btn border-secondary py-3 px-4 text-uppercase text-primary" style="width:300px;margin:20px 0" type="submit"> Đăng kí</button>
                    </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>